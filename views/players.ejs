<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Players</title>
    <script src="/static/js/socket.io.js"></script>
    <link rel="stylesheet" href="/static/css/shared.css">
    <link rel="stylesheet" href="/static/css/players.css">
</head>
<body>
    <div class="topnav">
        <div class="barner">
            <h3 class="title">M.W.D</h3>
        </div>
        <div class="actions">
            <button>Theme</button>
        </div>
    </div>
    <div class="full players">
        <div class="container">
            <% for (var i=0; i < players.length; i++ ){%>
                <div class="player" onclick="sendRequest('<%=players[i].id%>')">
                    <div class="avatar">
                        <div class="let"> <%=players[i].name[0]%> </div>
                    </div>
                    <div class="playername"><%=players[i].name%></div>
                </div>
            <% } %>
        </div>
    </div>

    <div class="notification" id="notification">
        <div class="message" id="message"></div>
        <div class="buttons">
            <button class="accept">Accept</button>
            <button class="reject" onclick="rejectRequest()">Reject</button>
        </div>
    </div>

    <script defer src="/static/js/players.js"></script>
</body>
</html>